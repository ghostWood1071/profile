<!DOCTYPE html>
<html lang="en" style="--primary-color: <%= template.color%>; --primary-background:<%= template.background_color%>">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%-about.name %></title>
    <!-- Font roboto -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- Font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <!-- CkEditable -->
    <script src="/ckeditor/ckeditor.js"></script>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/template1.css" />
  </head>
  <body>
    <div style="display:none" id="template"><%=template.name%></div>
    <div class="container main">
      <nav class="navbar navbar-expand-sm navbar-light">
        <a href="#" class="navbar-brand">Home</a>
        <button
          class="navbar-toggler d-lg-none"
          type="button"
          data-toggle="collapse"
          data-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active" data-page="about">
              <a class="nav-link about" href="#about">about</a>
            </li>
            <li class="nav-item" data-page="new">
              <a class="nav-link new" href="#new">new</a>
            </li>
            <li class="nav-item" data-page="teach">
              <a class="nav-link teach" href="#teach">teach</a>
            </li>
            <li class="nav-item" data-page="thesis">
              <a class="nav-link thesis" href="#thesis">thesis</a>
            </li>
            <li class="nav-item" data-page="research">
              <a class="nav-link grant" href="#research">research</a>
            </li>
            <li class="nav-item" data-page="publications">
              <a class="nav-link publication" href="#publications"
                >publications</a
              >
            </li>
          </ul>
        </div>
      </nav>
      <div class="content wrap-about" id="about">
        <div class="avatar col-12 col-sm-12 col-md-5 col-lg-4">
          <img id="avatar-img" src="<%=path+avatar%>" alt="avatar" />
          <input type="file" id="file" class="chosen-file" hidden />
          <label for="file" class="label-file btn btn-danger"
            ><i class="fas fa-upload"></i
          ></label>
        </div>
        <div class="about-right col-12 col-sm-12 col-md-7 col-lg-8">
          <h3>
            <div class="name list-group-item"><%-about.name%></div>
          </h3>
          <div class="title">
            <h5><div class="position list-group-item"><%-about.level%></div></h5>
            <i class="fa fa-plus btn-add" aria-hidden="true"></i>
          </div>
          <div class="list-group education" id="group1">
            <% about.university.forEach(item => { %>
              <div class="hover">
                <i class="fas fa-arrows-alt btn-arrow"></i>
                <i class="fas fa-trash-alt btn-trash"></i>
                <div class="list-group-item">
                  <p><%-item%></p>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
      <div class="content wrap-address">
        <div class="title">
          <h2>Contact Information</h2>
        </div>
        <div class="list-group contact">
          <div class="contact-group">
            <i class="fa fa-address-card icon" aria-hidden="true"></i>
            <div class="list-group-item about_address">
             <%-about.address %> 
            </div>
          </div>
          <div class="contact-group">
            <i class="fa fa-phone-square icon" aria-hidden="true"></i>
            <div class="list-group-item"><%-about.phone %></div>
          </div>
          <div class="contact-group">
            <i class="fa fa-fax icon" aria-hidden="true"></i>
            <div class="list-group-item"><%-about.fax %></div>
          </div>
          <div class="contact-group">
            <i class="fa fa-envelope icon" aria-hidden="true"></i>
            <div class="list-group-item">
              <% about.mail.forEach(mail => { %>
               <%- mail %>;
              <% }) %>
            </div>
          </div>
        </div>
      </div>
      <div class="content research">
        <div class="title">
          <h2>RESEARCH INTERESTS</h2>
          <i class="fa fa-plus btn-add" aria-hidden="true"></i>
        </div>
        <div class="list-group" id="group2">
          <% research_interest.forEach(element => { %>
            <div class="hover">
              <i class="fas fa-arrows-alt btn-arrow"></i>
              <i class="fas fa-trash-alt btn-trash"></i>
              <div class="list-group-item">
                <%- element %> 
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="content academic-record">
        <div class="title mb-3">
          <h2>ACADEMIC RECORD</h2>
          <i class="fa fa-plus btn-add" aria-hidden="true"></i>
        </div>
        <div class="list-group" id="group3">
          <% academic.forEach(item => { %>
            <div class="academic-item hover">
              <i class="fas fa-arrows-alt btn-arrow"></i>
              <i class="fas fa-trash-alt btn-trash"></i>
              <div class="list-group-item academic-item-time"><%-item.time%></div>
              <div class="list-group-item academic-item-name">
                <a href="#"><%- item.university %></a>
              </div>
              <div class="list-group-item academic-item-location"><%- item.location %></div>
              <div class="list-group-item academic-level"><%- item.level %></div>
              <div class="list-group-item academic-description text-secondary"><%- item.descript %></div>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="content new" id="new">
        <div class="title">
          <h2>NEW</h2>
          <i class="fa fa-plus btn-add" aria-hidden="true"></i>
        </div>
        <div class="list-group" id="groupNew">
          <div class="hover">
            <i class="fas fa-arrows-alt btn-arrow"></i>
            <i class="fas fa-trash-alt btn-trash"></i>
            <div class="list-group-item">
              <span
                >SOFTWARE QUALITY; SOFTWARE TESTING; METHODS IN SOFTWARE
                DEVELOPMENT</span
              >
            </div>
          </div>
          <div class="hover">
            <i class="fas fa-arrows-alt btn-arrow"></i>
            <i class="fas fa-trash-alt btn-trash"></i>
            <div class="list-group-item">
              <span>MULTI-OBJECTIVE OPTIMIZATION; PROJECT MANAGEMENT</span>
            </div>
          </div>
          <div class="hover">
            <i class="fas fa-arrows-alt btn-arrow"></i>
            <i class="fas fa-trash-alt btn-trash"></i>
            <div class="list-group-item">
              <span>BIG DATA PROCESSING AND ANALYTICS</span>
            </div>
          </div>
        </div>
      </div>
      <div class="content teaching" id="teach">
        <div class="title">
          <h2>TEACHING</h2>
        </div>
        <div class="list-group">
          <div class="wrap-year d-flex">
            <h4>ACADEMIC YEAR</h4>
            <div class="list-group-item teaching-year" style="padding: 0; margin-left: 10px">
              <h4><%- teaching.academic_year %></h4>
            </div>
          </div>
          <div class="graduate mb-4">
            <div class="title">
              <h5 class="text-secondary">GRADUATE COURSES</h5>
              <i class="fa fa-plus btn-add" aria-hidden="true"></i>
            </div>
            <div class="list-group" name="same-text" id="group4">
              
              <% teaching.graduate_course.forEach(item => { %>
                <div class="hover">
                  <i class="fas fa-arrows-alt btn-arrow"></i>
                  <i class="fas fa-trash-alt btn-trash"></i>
                  <div class="list-group-item text-secondary">
                   <%- item %> 
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
          <div class="university undergraduate">
            <div class="title">
              <h5 class="text-secondary">UNDERGRADUATE COURSES</h5>
              <i class="fa fa-plus btn-add" aria-hidden="true"></i>
            </div>
            <div class="list-group" name="same-text" id="group5">
              <% teaching.undergraduate_courses.forEach(item => { %>
                <div class="hover">
                  <i class="fas fa-arrows-alt btn-arrow"></i>
                  <i class="fas fa-trash-alt btn-trash"></i>
                  <div class="list-group-item text-secondary">
                    <%- item %> 
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
      <div class="content thesis" id="thesis">
        <div class="content-thesis">
          <div class="title">
            <h2>THESIS</h2>
            <i class="fa fa-plus btn-add" aria-hidden="true"></i>
          </div>
          <div class="list-group thesis-tag" id="group6">
            <% thesis.link.forEach(element => { %>
              <div class="hover thesis-link">
                <i class="fas fa-arrows-alt btn-arrow"></i>
                <i class="fas fa-trash-alt btn-trash"></i>
                <div class="list-group-item">
                  <%- element %> 
                </div>
              </div>
            <% }) %>
          </div>
          <% for( let i = 0; i < thesis.content.length; i++ ) { %>
                <% if (thesis.content[i].list_content) { %>
                  <div class="thesis-item">
                    <div class="title thesis-name">
                      <h5 class="list-group-item"><%-thesis.content[i].name%></h5>
                      <i class="fa fa-plus btn-add" aria-hidden="true"></i>
                    </div>
                    <div class="list-group" name="same-text" id="group9">
                      <% thesis.content[i].list_content.forEach(item => { %>
                        <div class="hover">
                          <i class="fas fa-arrows-alt btn-arrow"></i>
                          <i class="fas fa-trash-alt btn-trash"></i>
                          <div class="list-group-item text-secondary">
                            <%- item %> 
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                <% } %>
          <% } %>
            
        </div>
      </div>
      <div class="content research-grant" id="research">
        <div class="title">
          <h2>RESEARCH GRANTS</h2>
          <i class="fa fa-plus btn-add" aria-hidden="true"></i>
        </div>
        <div class="list-group" id="group10">
          <% research_grant.forEach(item => { %>
            <div class="hover">
              <i class="fas fa-arrows-alt btn-arrow"></i>
              <i class="fas fa-trash-alt btn-trash"></i>
              <div class="list-group-item text-secondary">
                <%- item %> 
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="content publications" id="publications">
        <div class="title">
          <h2 class="title">publications</h2>
          <i class="fa fa-plus btn-add addContentPublication" aria-hidden="true"></i>
        </div>
        <div class="publications-wrapper list-group">
          <div class="publication-item publication-book">
            <div class="title">
              <h5 class="subtitle list-group-item">BOOKS</h5>
              <i class="fas fa-arrows-alt"></i>
              <i class="fa fa-plus btn-add" aria-hidden="true"></i>
              <i class="fas fa-trash-alt"></i>
            </div>
            <div class="list-group" name="same-text" id="group11">
              <% for( let i = 0; i < public.book.length; i++ ) { %>
                <div class="hover">
                  <i class="fas fa-arrows-alt btn-arrow"></i>
                  <i class="fas fa-trash-alt btn-trash"></i>
                  <!-- <div class="pub-chosen-right">
                    <i class="fas fa-trash-alt"></i>
                    <input
                      type="file"
                      id="pdf<%=i%>"
                      name="pdf"
                      accept="application/pdf"
                      value="PDF"
                    />
                    <label class="pdf" for="pdf<%=i%>">PDF</label>
                  </div> -->
                  <div class="list-group-item text-secondary">
                    <%- public.book[i].content %> 
                    <% if (public.book[i].link != "") { %>
                      <a href="<%=path+public.book[i].link%>">PDF</a>
                    <% } %>
                  </div>
                </div>
              <% } %>
              
            </div>
          </div>
          <div class="publication-detail">
            <div class="publication-wrapper">
              <div class="title">
                <h5 class="subtitle list-group-item mr-2">PUBLISHED PAPERS (SELECTED)</h5>
                <i class="fas fa-arrows-alt"></i>
                <i class="fa fa-plus btn-add addPublishedPaper" aria-hidden="true"></i>
              </div>
              <div class="publication-list list-group">
                <% if (public.paper.length>0) { %>
                  <div class="publication-item">
                    <div class="title">
                      <div class="list-group-item mr-2">
                        <strong class="text-dark" style="opacity: 0.9; font-size: 17px"
                          >A) International Journals:</strong
                        >
                      </div>
                      <i class="fas fa-arrows-alt"></i>
                      <i class="fa fa-plus btn-add" aria-hidden="true"></i>
                      <i class="fas fa-trash-alt"></i>
                    </div>
                    <div class="list-group" name="same-pdf" id="group12">
                      <% public.paper[0].content.forEach(element => { %>
                        <div class="hover">
                          <i class="fas fa-arrows-alt btn-arrow"></i>
                          <div class="pub-chosen-right">
                            <i class="fas fa-trash-alt"></i>
                            <input
                              type="file"
                              id="pdf"
                              name="pdf"
                              accept="application/pdf"
                              value="PDF"
                            />
                            <label class="pdf" for="pdf">PDF</label>
                          </div>
                          <div class="list-group-item text-secondary">
                            <%- element %> 
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                  <div class="publication-item">
                    <div class="title">
                      <div class="list-group-item mr-2">
                        <strong class="text-dark" style="opacity: 0.9; font-size: 17px"
                          >B) National Journals:</strong
                        >
                      </div>
                      <i class="fas fa-arrows-alt"></i>
                      <i class="fa fa-plus btn-add" aria-hidden="true"></i>
                      <i class="fas fa-trash-alt"></i>
                    </div>
                    <div class="list-group" name="same-pdf" id="group13">
                      <% public.paper[1].content.forEach(element => { %>
                        <div class="hover">
                          <i class="fas fa-arrows-alt btn-arrow"></i>
                          <div class="pub-chosen-right">
                            <i class="fas fa-trash-alt"></i>
                            <input
                              type="file"
                              id="pdf"
                              name="pdf"
                              accept="application/pdf"
                              value="PDF"
                            />
                            <label class="pdf" for="pdf">PDF</label>
                          </div>
                          <div class="list-group-item text-secondary">
                            <%- element %> 
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                  <div class="publication-item">
                    <div class="title">
                      <div class="list-group-item mr-2">
                        <strong class="text-dark" style="opacity: 0.9; font-size: 17px"
                          >C) International Conferences:</strong
                        >
                      </div>
                      <i class="fas fa-arrows-alt"></i>
                      <i class="fa fa-plus btn-add" aria-hidden="true"></i>
                      <i class="fas fa-trash-alt"></i>
                    </div>
                    <div class="list-group" name="same-pdf" id="group14">
                      <% public.paper[2].content.forEach(element => { %>
                        <div class="hover">
                          <i class="fas fa-arrows-alt btn-arrow"></i>
                          <div class="pub-chosen-right">
                            <i class="fas fa-trash-alt"></i>
                            <input
                              type="file"
                              id="pdf"
                              name="pdf"
                              accept="application/pdf"
                              value="PDF"
                            />
                            <label class="pdf" for="pdf">PDF</label>
                          </div>
                          <div class="list-group-item text-secondary">
                            <%- element %> 
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                  <div class="list-group publication-item" id="group15">
                    <div class="title">
                      <div class="list-group-item mr-2">
                        <strong class="text-dark" style="opacity: 0.9; font-size: 17px"
                          >D) National Conferences:</strong
                        >
                      </div>
                      <i class="fas fa-arrows-alt"></i>
                      <i class="fa fa-plus btn-add" aria-hidden="true"></i>
                      <i class="fas fa-trash-alt"></i>
                    </div>
                    <div class="list-group" name="same-pdf" id="group16">
                      <% public.paper[3].content.forEach(element => { %>
                        <div class="hover">
                          <i class="fas fa-arrows-alt btn-arrow"></i>
                          <div class="pub-chosen-right">
                            <i class="fas fa-trash-alt"></i>
                            <input
                              type="file"
                              id="pdf"
                              name="pdf"
                              accept="application/pdf"
                              value="PDF"
                            />
                            <label class="pdf" for="pdf">PDF</label>
                          </div>
                          <div class="list-group-item text-secondary">
                            <%- element %> 
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        
      </div>
      <div class="submit">
        <button type="submit" onclick="Save()" class="btn btn-danger">
          Save
        </button>
      </div>
      <div class="theme-setting">
        <button class="btn btn-light btn-cogs">
          <i class="fas fa-cogs"></i>
        </button>
        <div class="content-theme">
          <h5>Color</h5>
          <ul class="list-color">
            <li data-color="color1"></li>
            <li data-color="color2"></li>
            <li data-color="color3"></li>
            <li data-color="color4"></li>
            <li data-color="color5"></li>
            <li data-color="color6"></li>
            <li data-color="color7"></li>
            <li data-color="color8"></li>
          </ul>
        </div>
        <div class="content-theme">
          <h5>Background</h5>
          <ul class="list-background">
            <li data-background="background1"></li>
            <li data-background="background2"></li>
            <li data-background="background3"></li>
            <li data-background="background4"></li>
            <li data-background="background5"></li>
            <li data-background="background6"></li>
            <li data-background="background7"></li>
            <li data-background="background8"></li>
          </ul>
        </div>
        <div class="content-theme">
          <h5>Themes</h5>
          <ul class="list-theme">
            <li data-theme="theme1">1</li>
            <li data-theme="theme2">2</li>
          </ul>
        </div>
      </div>
      <div class="mood-wrapper">
        <div class="mood">
          <div class="main-mood">
              <button type="button" class="close btn-close" data-dismiss="alert">&times;</button>
              <div class="mood-content">
                Do you want to switch to interface 2?
              </div>
              <div class="mood-btn-wrapper">
                <button class="btn btn-danger">Confirm</button>
                <button class="btn btn-secondary btn-close">Cancel</button>
              </div>
          </div>
        </div>
      </div>
      <div class="success-wrapper">
        <div class="success">
          <div class="main-success">
              <button type="button" class="close btn-close" data-dismiss="alert">&times;</button>
              <div class="success-content">
                 Your data was saved.
              </div>
              <div class="mood-btn-wrapper">
                <button class="btn btn-danger btn-close">Confirm</button>
              </div>
          </div>
        </div>
      </div>
      <!-- <div class="alert alert-success">
        <button type="button" class="close btn-close" data-dismiss="alert" style="margin-left: 1rem">&times;</button>
        Your data was saved
      </div>
      <div class="alert alert-danger">
        <button type="button" class="close btn-close" data-dismiss="alert" style="margin-left: 1rem">&times;</button>
        Your data was not saved
      </div> -->
    </div>
    <!-- JS -->
    <script src="/javascripts/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/sortablejs-make/Sortable.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-sortablejs@latest/jquery-sortable.js"></script>
    <script src="/javascripts/template1.js"></script>
    <script src="/javascripts/getData2.js"></script>
    <script src="/javascripts/convertToGuess.js"></script>
  </body>
</html>
